{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "customConditions": ["@event-bot/source"],
    "paths": {
      "@event-bot/chat-ui": ["packages/chat-ui/src/index.ts"],
      "@event-bot/data-access": ["packages/data-access/src/index.ts"],
      "@event-bot/store": ["packages/store/src/index.ts"],
      "@event-bot/tailwind-preset": ["packages/tailwind-preset/src/index.ts"]
    },
    "types": ["node", "react", "react-dom"]
  }
}
